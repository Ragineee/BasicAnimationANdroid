<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:foregroundGravity="bottom"
        android:src="@drawable/logo_icon"
        android:transitionName="logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189"></ImageView>

    <TextView
        android:id="@+id/musiclabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:gravity="bottom"
        android:scaleType="fitXY"
        android:text="Welcome"
        android:textColor="#FFC107"
        android:textSize="50sp"
        android:transitionName="logo"
        app:layout_constraintBottom_toBottomOf="@+id/logoIcon"
        app:layout_constraintEnd_toStartOf="@+id/logoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logoIcon"
        app:layout_constraintVertical_bias="0.0"></TextView>

    <TextView
        android:id="@+id/remember"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:scaleType="fitXY"
        android:text="Allieeeennnsss"
        android:textColor="#FFC107"
        android:textSize="50sp"
        android:transitionName="logo"
        app:layout_constraintEnd_toEndOf="@+id/logoIcon"
        app:layout_constraintStart_toStartOf="@+id/musiclabel"
        app:layout_constraintTop_toBottomOf="@+id/logoIcon"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
